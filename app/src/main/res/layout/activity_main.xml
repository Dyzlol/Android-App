<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tony_macbook.placeholder.MainActivity"
    android:visibility="visible"
    android:background="@drawable/main_photo"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#9c1f1f1f"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:id="@+id/MainMenuLayout"
        android:weightSum="1"
        android:visibility="visible"
        android:layout_marginBottom="200px"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/logoflipped"
            android:layout_gravity="left|top" />

    </LinearLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="90dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to Neighbor-2-Neighbor"
            android:id="@+id/textView4"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What would you like to do?"
            android:id="@+id/textView5"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="280dp"
            android:layout_height="69dp"
            android:text="Search"
            android:id="@+id/mmenu_but_search"
            android:visibility="visible"
            android:textSize="24dp"
            android:background="@drawable/rounded_buttons"
            android:focusableInTouchMode="true"
            android:enabled="true"
            android:typeface="normal"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:clickable="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="New Button"
            android:id="@+id/space_button1"
            android:visibility="invisible" />

        <Button
            android:layout_width="282dp"
            android:layout_height="69dp"
            android:text="Add"
            android:id="@+id/mmain_but_addinfo"
            android:textSize="24dp"
            android:background="@drawable/rounded_buttons"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:clickable="true"
            android:textAlignment="center"
            android:typeface="normal"
            android:layout_weight="0.00" />

    </LinearLayout>

</LinearLayout>
