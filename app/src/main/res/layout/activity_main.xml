<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tony_macbook.placeholder.MainActivity"
    android:visibility="visible"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainMenuLayout"
        android:weightSum="1"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/hand_house"
            android:layout_gravity="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="New Button"
            android:id="@+id/space_button2"
            android:visibility="invisible"
            android:textSize="@dimen/abc_text_size_caption_material" />

        <Button
            android:layout_width="280dp"
            android:layout_height="75dp"
            android:text="Search Information"
            android:id="@+id/mmenu_but_search"
            android:visibility="visible"
            android:textSize="24dp"
            android:background="@drawable/rounded_buttons"
            android:focusableInTouchMode="true"
            android:enabled="true"
            android:typeface="normal"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="0.21"
            android:clickable="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/space_button1"
            android:visibility="invisible" />

        <Button
            android:layout_width="280dp"
            android:layout_height="75dp"
            android:text="Add Information"
            android:id="@+id/mmain_but_addinfo"
            android:textSize="24dp"
            android:background="@drawable/rounded_buttons"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight=".21"
            android:clickable="true"
            android:textAlignment="center"
            android:typeface="normal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>
